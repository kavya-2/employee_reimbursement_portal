<h1>Submitted Bills</h1>

<%= link_to 'New Bill', new_bill_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Amount</th>
      <th>Submitted Employee</th>
      <th>Department</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.bill_type %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.employee.full_name %></td>
        <td><%= bill.employee.department %></td>
        <td>
          <%= link_to 'Show', bill, class: 'btn btn-secondary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>